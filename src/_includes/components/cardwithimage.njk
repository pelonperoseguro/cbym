{% macro cardwithimage(title = "Shoes!", description = "If a dog chews shoes whose shoes does he choose?", image = {img: "https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.webp", alt: ""}) %}
<div class="card bg-base-100 shadow-xl">
  <figure>
    <img
      src="{{image.img}}"
